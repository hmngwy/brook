<h4>Login</h4>
{{#if try_again}}<p class="banner bad">Try again.</p>{{/if}}
{{#if register_ok}}<p class="banner">Account created, please log in.</p>{{/if}}
<form id="register_form" action="/login" method="post">
  <input type="text" placeholder="handle" name="username">
  <input type="password" placeholder="password" name="password">
  <button  type="submit">Login</button>
</form>

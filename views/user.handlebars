
<h4>Handle: {{user.username}}</h4>
<h4>Karma: {{user.karma}}</h4>

{{#if password_reset}}<p class="banner">Password succesfully reset.  </p>{{/if}}
{{#if try_again}}<p class="banner bad">Try again.  </p>{{/if}}

{{#if user.notifications}}
<h4>Notifications</h4>
<ul class="notifications user_list">
  {{#each user.notifications}}
  <li>{{timeFromNow ts_created}}: {{{message}}}</li>
  {{/each}}
</ul>
{{/if}}
{{#if user.posts}}
<h4>Submissions</h4>
<ul class="user_list">
  {{#each user.posts}}
  <li>{{timeFromNow ts_created}}: <a href="/topic/{{_id}}">{{{title}}}</a></li>
  {{/each}}
</ul>
{{/if}}
{{#if user.posts_commented}}
<h4>Comments</h4>
<ul class="user_list">
  {{#each user.posts_commented}}
  <li>~{{timeFromNow ts_created}}: <a href="/topic/{{_id}}">{{{title}}}</a></li>
  {{/each}}
</ul>
{{/if}}
<p>
  <small>*These lists show their last 50 items.</small>
</p>
<!-- <p><a href="">submissions</a></p>
<p><a href="">comments</a></p> -->
<h4>Change Password</h4>
<form id="submit_form" action="/reset" method="post">
  <input type="hidden" value="{{user.username}}" name="username">
  <input type="password" placeholder="current" name="password">
  <input type="password" placeholder="new" name="new">
  <button type="submit">Reset</button>
</form>

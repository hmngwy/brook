<nav class="filters">
  <ul>
    {{#if channel}}
    <li><a href="/~{{channel}}">~{{channel}}</a></li>
    {{#each config.filters}}
    <li><a href="/~{{@root.channel}}/{{@key}}">{{this.name}}</a></li>
    {{/each}}
    {{else}}
    <li><a href="/">Frontpage</a></li>
    {{#each config.filters}}
    <li><a href="/{{@key}}">{{this.name}}</a></li>
    {{/each}}
    {{/if}}
    <li class="post-toggle"><a onclick="return toggleForm()">Post a topic {{#if channel}}in ~{{channel}}{{/if}}</a></li>
  </ul>
</nav>
